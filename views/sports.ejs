<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>
        <link rel="stylesheet" href="/css/sports.css">
        <title>Sports</title>
</head>

<body>
    <header>
        <%- include('./partials/nav', {cp: 'sports' }); %>
    </header>
    <section class="container my-3">
        <h3 class="display-3 text-center">Sports</h3>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            <% articles.forEach((article)=> { %>
            <div class="col">
                <div class="card h-100 p-3 w-100">
                    <img src="<%=article.urlToImage%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=article.title%>
                        </h5>
                        <span class="h6">
                            <%=article.author%>
                        </span>
                        <span class="h6"> - <i>
                                <%=(new Date(Date.parse(article.publishedAt))).toDateString()%>
                            </i></span>
                        <p class="card-text">
                            <%=article.content.replace( /\[\+\d+ chars\]$/, '' )%>
                        </p>
                    </div>
                    <a href="<%=article.url%>" class="btn btn-dark">Go to article</a>
                </div>
            </div>
            <% }); %>
        </div>
    </section>
    <%- include('./partials/footer'); %>
</body>

</html>